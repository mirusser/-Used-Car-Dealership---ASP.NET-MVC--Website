@model IEnumerable<TypicalMirek_UsedCarDealer.Models.ViewModels.DisplayCarViewModel>

@{
    ViewBag.Title = "Car list";
    Layout = "../Shared/_AdminLayout.cshtml";
}

<h1 style="text-align: center">Car List</h1>

<div class="col-md-12">
    @Html.ActionLink("New Car", "Create", "CarManagement", new {@class = "btn btn-primary btn-product col-md-12 col-xs-12"})
</div>

<br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarImagePath)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.CarImageName))
                {
                    <div>
                        <img src="@Url.Action($"GetCarImage", $"CarManagement", new {imageName = @item.CarImageName})" alt="" height="120" width="120" />
                    </div>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "CarManagement", new  {  Id = item.Id }, new  {@class = "btn btn-info btn-xs col-md-3 col-xs-12" })
                @Html.ActionLink("Details", "Details", "CarManagement", new { Id = item.Id }, new {@class = "btn btn-info btn-xs col-md-3 col-xs-12" })
                @Html.ActionLink("Delete", "Delete", "CarManagement", new { Id = item.Id }, new {@class = "btn btn-danger btn-xs col-md-3 col-xs-12" })
                @Html.ActionLink("Suspend", "Suspend", "CarManagement", new { Id = item.Id }, new { @class = "btn btn-danger btn-xs col-md-3 col-xs-12" })
            </td>
        </tr>
    }

</table>
