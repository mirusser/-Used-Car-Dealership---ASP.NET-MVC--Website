        @Html.LabelFor(model => model.Countries, "Country", htmlAttributes: new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CountryId, Model.Countries, string.Empty, htmlAttributes: new {@class = "form-control", Placeholder = "Character"})
            @Html.ValidationMessageFor(model => model.CountryId, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PositionsOfSteeringWheel, "Position of steering wheel", htmlAttributes: new {@class = "control-label col-md-2"})
