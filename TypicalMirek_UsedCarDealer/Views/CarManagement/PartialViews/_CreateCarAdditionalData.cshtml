@model TypicalMirek_UsedCarDealer.Models.ViewModels.AddCarViewModel

<div class="form-horizontal">
    <h5>
        Additional information about car
    </h5>
    <hr/>

    <div class="form-group">
        @Html.LabelFor(model => model.Colors, "Color", htmlAttributes: new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ColorId, Model.Colors, string.Empty, htmlAttributes: new {@class = "form-control"})
            @Html.ValidationMessageFor(model => model.ColorId, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Gearboxes, "Gearbox", htmlAttributes: new {@class = "control-label col-md-2"})
