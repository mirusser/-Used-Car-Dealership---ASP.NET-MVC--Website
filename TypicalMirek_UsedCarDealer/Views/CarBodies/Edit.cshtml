@model TypicalMirek_UsedCarDealer.Models.Body

@{
    ViewBag.Title = "Edit";
    Layout = "../Shared/_AdminLayout.cshtml";
}

<h1 style="text-align: center">Edit</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align: center">Body</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-horizontal col-md-12">
            <div class="form-group col-md-12">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = nameof(Model.Name) } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-horizontal col-md-12">
            <div class="form-group col-md-12">
                <div>
                    <input type="submit" value="Edit" class="btn btn-primary col-md-12 col-xs-12" />
                </div>
            </div>
        </div>
    </div>
}

<div class="form-horizontal col-md-12">
    <div class="form-group col-md-12">
        <div>
            @Html.ActionLink("Back to List", "List", "CarBodies", new { @class = "btn btn-default col-md-12 col-xs-12" })
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
