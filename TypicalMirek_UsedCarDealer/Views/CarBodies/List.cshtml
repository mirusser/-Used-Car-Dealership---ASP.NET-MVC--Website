@using TypicalMirek_UsedCarDealer.Models
@using TypicalMirek_UsedCarDealer.Models.Enums
@model IEnumerable<TypicalMirek_UsedCarDealer.Models.Body>

@{
    ViewBag.Title = "List of car bodies";
    Layout = "../Shared/_AdminLayout.cshtml";
}

<h1 style="text-align: center">List of car bodies</h1>

<p>
    @Html.ActionLink("New car body", "Create", "CarBodies", new { @class = "btn btn-primary btn-product col-md-12 col-xs-12" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "CarBodies", new { Id = item.Id }, new { @class = "btn btn-info btn-xs col-md-4 col-xs-12" })
                @Html.ActionLink("Details", "Details", "CarBodies", new { Id = item.Id }, new { @class = "btn btn-info btn-xs col-md-4 col-xs-12" })
                @Html.ActionLink("Delete", "Delete", "CarBodies", new { Id = item.Id }, new { @class = "btn btn-danger btn-xs col-md-4 col-xs-12" })
            </td>
        </tr>
    }

</table>
