<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Typical Mirek</title>
    <!--[if IE]>
    <link rel="shortcut icon" href="@Url.Action("Favicon", "GetPhoto")" type="image/vnd.microsoft.icon" />
    <![endif]-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/AdminMenu")
    @Scripts.Render("~/bundles/AdminMenu")
    @Styles.Render("~/Content/AdminMenuScroll")
    @Scripts.Render("~/bundles/AdminMenuScroll")
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        var jq = jQuery.noConflict();
        jq(document).ready(function () {
            jq('#adminMenu').sidenavMove();

            jq("#adminMenu").mCustomScrollbar({
                mouseWheel: { scrollAmount: 1000 }
            });
        });
    </script>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="javascript:;" class="toggle" id="sidenav-toggle">
                    <i class="glyphicon glyphicon-th-list navbar-brand" style="color: white"></i>
                </a>
                @Html.ActionLink("Typical Mirek", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Cars", "CarList", "Car")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Admin", "Admin", "Admin")</li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("User"))
                    {
                        <li>@Html.ActionLink("Garage", "Index", "Garages")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @{
            Html.RenderPartial($"~/Views/Admin/PartialViews/_Sidebar.cshtml");
        }
        @RenderBody()
    </div>
    <div class="center-block">
        <hr />
        <footer class="text-center">
            @Html.Partial("_Footer")
        </footer>
    </div>

</body>
</html>