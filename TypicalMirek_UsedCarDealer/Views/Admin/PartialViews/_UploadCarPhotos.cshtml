@model TypicalMirek_UsedCarDealer.Models.ViewModels.AddCarViewModel

<div class="form-horizontal">
    <h4>Upload photos</h4>
    <hr/>

    @Html.ValidationSummary(true)

    @if (Model.Photos != null && Model.Photos.Any())
    {
        foreach (var photo in Model.Photos)
        {
            <div class="col-md-3">
                <img src="@Url.Action($"GetCarImage", $"CarManagement", new {imageName = @photo.Name})" alt="" height="100" width="100"/>
            </div>
        }
    }

    <div class="form-group">
        @*@Html.Label("Photos:", htmlAttributes: new {@class = "control-label col-md-12"})*@
        <div class="col-md-10">
            <input type="file" name="Files" id="Files" title="Upload car photos" multiple />
            @Html.ValidationMessageFor(model => model.Files, "", new {@class = "text-danger"})
        </div>
    </div>

</div>
<hr />
